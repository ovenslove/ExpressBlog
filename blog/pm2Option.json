{
  "name"        : "blog",  // 应用名称
  "script"      : "./bin/www",  // 实际启动脚本
  "cwd"         : "./",  // 当前工作路径
  "watch": true,
  "ignore_watch" : [  // 从监控目录中排除
    "logs",
    "public/images"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "autorestart":true,
  "error_file" : "./logs/app-err.log",  // 错误日志路径
  "out_file"   : "./logs/app-out.log",  // 普通日志路径
  "env": {
    "NODE_ENV": "production"  // 环境参数，当前指定为生产环境
  }
}