extends layout/homeLayout

block homecontent
    link(rel='stylesheet',type="text/css", href='/css/user.css')
    link(rel='stylesheet',type="text/css", href='/bower_components/cropper/dist/cropper.min.css')
    .home-box
        .ui.breadcrumb.breadcrumb-nav
            a(href="/").section MainPage
                .divider  /
                a(href="/home").section home
                    .divider  /
                .active.section User
        article.article
            .user-main-box
                h2 User Information
                .user-sim-panle
                    .user-sim-title BaseInformation
                    .user-sim-box
                        label UserName:
                        input(type="text",disabled,value='1905997838@qq.com')
                    .user-sim-box
                        label UserPassword:
                        input(type="password",disabled,value='1905997838@qq.com')
                        span.exchangePassword Edit
                        .exchangePassword-box
                            i.remove.icon.close-btn
                            .user-password-sim-box
                                label Old Password:
                                input(type='password')
                            .user-password-sim-box
                                label New Password:
                                input(type='password')
                            .user-password-sim-box
                                label New Password:
                                input(type='password')
                            .user-password-sim-box
                                label VerifiCode:
                                span#verifiCode 3+11=?
                                input(type='password')#verifiCodeInput
                            .user-password-sim-box
                                #exchangePassword-cimmit-btn Submit
                    .user-sim-box
                        label UserLogo:
                        #userLogoPreview-show-container
                            img#userLogoPreview-show(src="/images/sim-img.jpg")
                        span.exchangeLogo Edit
                        #userLogoPreview-container.clearfix
                            #userLogoPreview
                                img#userlogo-img(src="/images/sim-img.jpg")
                            .userlogo-preview-box
                                .userlogo-preview.lg
                                .userlogo-preview.mid
                                .userlogo-preview.small
                                .put-image-data-btn 选择文件
                                .get-image-data-btn 确定
                    .user-sim-box
                        label Telephone:
                        input(type="tel",placeholder="What's your telephone number?")
                .user-sim-panle
                    .user-sim-title ExtraInformation
                    .user-sim-box
                        label Sex:
                        select.ui.dropdown(style="height:30px;line-height:30px;")
                            option(value='') Gender
                            option(value='1') Male
                            option(value='0') Female
                    .user-sim-box
                        label Age:
                        input(type="number",min='16',max='60',value='18')
                    .user-sim-box
                        label Education:
                        input(type="text",placeholder="which university are you in?")
                    .user-sim-box
                        label Occupation:
                        input(type="text",placeholder="What's your occupation?")
                    .user-sim-box
                        label Hobbit:
                        input(type="text",placeholder="What do you like to do?")
                    .user-sim-box
                        label(style="vertical-align:top;") Introduce:
                        textarea(placeholder="introduce yourself!")
                .user-info-submit submit



    script(src="/bower_components/cropper/dist/cropper.min.js")
    script(src="/js/user.js")