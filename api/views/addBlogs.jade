extends layout/layout

block content
    link(rel='stylesheet',type="text/css", href='/bower_components/semantic/dist/semantic.min.css')
    link(rel='stylesheet',type="text/css", href='/css/wangEditor.css')
    link(rel='stylesheet',type="text/css", href='/css/base.css')
    link(rel='stylesheet',type="text/css", href='/css/blogEdit.css')
    link(rel='stylesheet',type="text/css", href='/bower_components/nprogress/nprogress.css')
    script(src="/bower_components/nprogress/nprogress.js")
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/semantic/dist/semantic.min.js")
    include layout/header

    .main-box
        form.ui.form(method="post",action="/addBlogs")
            .field
                label Blog Title
                input(type='text',name="blogTitle",placeholder="You need a good title")
            .field
                label Blog Introduce
                textarea(rows='2',name="blogIntr",placeholder="Simply tell us something")
            .inline.field
                .ui.toggle.checkbox
                    input.hidden(type='checkbox', tabindex='0',name='lockStatus')
                    label Lock
            .field
                label Blog PreviewImage
                input(type='url',name='previewImageUrl',placeholder="Image Url (Allow the chain)")
            .field
                label Blog Marks
                .ui.fluid.multiple.search.selection.dropdown
                    input(type='hidden', name='markGroup')
                    i.dropdown.icon
                    .default.text give your blog some beautiful marks
                    .menu
                        .item(data-value='html', data-text='html')
                            |  html
                        .item(data-value='css', data-text='css')
                            |  css
                        .item(data-value='node', data-text='node')
                            |  node
                        .item(data-value='express', data-text='express')
                            |  express
                        .item(data-value='jade', data-text='jade')
                            |  jade
                        .item(data-value='sass', data-text='sass')
                            |  sass
            div.editor-container
                div#editor-box
            input#blogContent(type="hidden",name="blogContent")
            button.positive.ui.button#submit-btn
                | SUBMIT

        div.editor-markdown-container


    include layout/footer

    script(src="/js/wangEditor.js")
    script(src="/js/blogEdit.js")


