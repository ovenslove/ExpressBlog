{
  "name"        : "main",  // 应用名称
  "script"      : "./bin/run",  // 实际启动脚本
  "cwd"         : "./",  // 当前工作路径
  "watch": true,
  "ignore_watch" : [  // 从监控目录中排除
    "public",
    "blog",
    "demo",
    "api"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "autorestart":true,
  "env": {
    "NODE_ENV": "production"  // 环境参数，当前指定为生产环境
  }
}
